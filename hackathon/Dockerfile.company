FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ ./src/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV API_MODULE=api_company_lookup

# Expose port (Cloud Run will set PORT env var)
EXPOSE 8080

# Run the API server
CMD ["uvicorn", "src.api_company_lookup:app", "--host", "0.0.0.0", "--port", "8080"]

