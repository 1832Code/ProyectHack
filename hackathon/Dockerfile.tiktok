FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ ./src/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV API_MODULE=api_global_search

ENV PORT=8080

EXPOSE 8080

CMD python -m uvicorn src.api_global_search:app --host 0.0.0.0 --port ${PORT:-8080} --log-level info

